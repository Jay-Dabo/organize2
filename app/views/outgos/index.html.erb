<p id="notice"><%= notice %></p>

<div class="padding-md">
  <div class="row">
    <div class="col-lg-12">
      <div class="panel panel-default">
        <div class="panel-heading">
          <%= link_to 'New', new_outgo_path, class: 'btn btn-success' %>

          <span class="badge badge-info pull-right">	
            4 left
          </span>
        </div>
        <table class="table table-inbox table-hover">
          <tbody>
            <% @outgos.each do |outgo| %>
              <tr class="<%= outgo.paid? ? :success : :warning %>">
                <td class="view-message">
                  <%= outgo.description %>
                  <% if outgo.category.present? %>
                    <span class="label label-info"><%= outgo.category %></span>
                  <% end %>
                </td>
                <td class="view-message dont-show"><%= number_to_currency outgo.value %></td>
                <td class="view-message text-right">
                  <%= outgo.account %>
                </td>
                <td class="view-message text-right">
                  <%= l outgo.paid_at, format: :long %>
                </td>
                <td class="inbox-small-cells">
                  <% if outgo.paid? %>
                    <%= link_to unconfirm_outgo_path(outgo) do %>
                      <i class="fa fa-times"></i>
                    <% end %>
                  <% else %>
                    <%= link_to confirm_outgo_path(outgo) do %>
                      <i class="fa fa-check"></i>
                    <% end %>
                  <% end %>
                </td>
                <td class="inbox-small-cells">
                  <%= link_to edit_outgo_path(outgo) do %>
                    <i class="fa fa-pencil-square-o"></i>
                  <% end %>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div><!-- /panel -->
    </div><!-- /.col -->
  </div><!-- /.row -->
</div><!-- /.padding-md -->
</div><!-- /main-container -->
