<div class="panel panel-default">
  <div class="panel-body">
    <%= simple_form_for(@trade) do |f| %>
      <div class="form-inputs">
        <%= f.input :source_id, collection: Account.all %>
        <%= f.input :destination_id, collection: Account.all %>
        <%= f.input :value_in, disabled: @trade.confirmed? %>
        <%= f.input :value_out, disabled: @trade.confirmed? %>
        <%= f.input :fee, hint: 'based on value out', disabled: @trade.confirmed? %>
        <%= f.input :trade_at, as: :string, input_html: { class: :date } %>
      </div>

      <div class="form-actions">
        <%= f.submit class: 'btn btn-success' %>
        <% if @trade.persisted? %>
          <%= link_to 'Back', trades_path, class: 'btn btn-default' %>
        <% else %>
          <%= link_to 'Back', @trade, class: 'btn btn-default' %>
        <% end %>
      </div>
    <% end %>
  </div>
</div>
