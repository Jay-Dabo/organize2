<div class="panel panel-default">
  <div class="panel-heading">
    <%= link_to 'New', new_card_path, class: 'btn btn-success' %>

    <span class="badge badge-info pull-right">
      <%= Card.count %>
    </span>
  </div>

  <table class="table table-inbox table-hover">
    <thead>
      <tr>
        <th>#</th>
        <th>Name</th>
        <th>Limit</th>
        <th>Payment day</th>
        <th></th>
      </tr>
    </thead>

    <tbody>
      <% @cards.each do |card| %>
        <tr class="<%= card.active? ? :success : :warning %>">
          <td>
            <%= link_to card do %>
              #<%= card.id %>
            <% end %>
          </td>
          <td><%= card.name %></td>
          <td><%= card.limit %></td>
          <td><%= card.payment_day %></td>
          <td>
            <%= link_to edit_card_path(card) do %>
              <i class="fa fa-pencil-square-o"></i>
            <% end %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
