<div class="padding-md">
  <div class="row">
    <div class="col-lg-12">
      <div class="panel panel-default">
        <div class="panel-body">
          <%= simple_form_for @card do |f| %>
            <%= f.input :name %>
            <%= f.input :limit %>
            <%= f.input :payment_day %>

            <%= f.submit class: 'btn btn-success' %>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
