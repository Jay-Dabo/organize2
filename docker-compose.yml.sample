version: "2"

services:
  db:
    image: postgres
    volumes:
      - .:/app
      - db:/var/lib/postgresql/data
    expose:
      - '5432'

  heroku:
    build:
      context: .
      dockerfile: Dockerfile.heroku
    volumes:
      - .:/app
      - heroku:/root
    working_dir: /app

  web:
    build: .
    volumes:
      - .:/app
    working_dir: /app
    command: bundle exec puma -C config/puma.rb
    ports:
      - "3000:3000"
    links:
      - db

volumes:
  db:
  heroku:
